<struts>

	<constant name="struts.devMode2" value="true" />
    <constant name="struts.multipart.saveDir" value="C:\projectSave" />

	<package name="guggli_projekt" extends="struts-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>
  	
		<action name="login" class="org.apache.struts.login.action.LoginAction" method="execute" >
  			<result name="success">/auth.jsp</result>
		</action>

<action name="documents" class="org.apache.struts.docs.action.DocsListsAction" method="execute">
	  		<result name="success">/documents.jsp</result>
		</action>

  	<!--probalok vmit lehet h meg kell 	<action name="docssLists" class="org.apache.struts.docs.action.DocsCreateAction" method="execute">
	  		<result name="success">/documents.jsp</result>
