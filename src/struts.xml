<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode2" value="true" />

	<package name="guggli_projekt" extends="struts-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>
  	
		<action name="login" class="org.apache.struts.login.action.LoginAction" method="execute" >
  			<result name="success">/auth.jsp</result>
		</action>

  		<action name="docsLists" class="org.apache.struts.docs.action.DocsCreateAction" method="execute">
	  		<result name="success">/documents.jsp</result>
<!-- 	  		<result name="none">/plsreg.jsp</result> -->
		
		</action>
		<action name="docscreate" class="org.apache.struts.docs.action.DocsCreateAction" method="execute">
	  		<result name="success">/docscreate.jsp</result>
		</action>
		
		<action name="docsup" 
	    	class="org.apache.struts.docs.action.DocsUpAction" method="display">
	    	<result name="none">/docsup.jsp</result>
		</action>
		<action name="resultAction" class="org.apache.struts.docs.action.DocsUpAction">
	    		<interceptor-ref name="exception"/>
            		<interceptor-ref name="i18n"/>
            		<interceptor-ref name="fileUpload">
       				<param name="allowedTypes">text/plain</param>
       				<param name="maximumSize">10240</param>
  	    		</interceptor-ref> 
            		<interceptor-ref name="params">
                		<param name="excludeParams">guggli\..*,^struts\..*</param>
            		</interceptor-ref>
            		<interceptor-ref name="validation">
                		<param name="excludeMethods">input,back,cancel,browse</param>
            		</interceptor-ref>
            		<interceptor-ref name="workflow">
                		<param name="excludeMethods">input,back,cancel,browse</param>
            		</interceptor-ref>
 
	   		 <result name="success">/result.jsp</result>
	    		<result name="input">/docsup.jsp</result> 
		</action>

		<action name="register" class="org.apache.struts.register.RegisterAction" method="execute" >
  			<result name="success">/register_success.jsp</result>
  			<result name="error">/register_error.jsp</result>
  			<result name="input">/register.jsp</result>
		</action>


	</package>

</struts>
